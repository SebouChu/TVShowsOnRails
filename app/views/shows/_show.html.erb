<div id="show-content">
  <div id="show-infos">
    <h1><%= @show.title %></h1><hr class="small-hr">
    <p><%= @show.plot %></p><br>
    <div id="show-buttons">
      <% if @my_shows.include?(@show) %>
      <%= link_to "Edit", edit_show_path(@show), remote: true, class: "btn btn-lg btn-warning new-btn" %>
      <%= link_to "Delete", show_delete_path(@show), remote: true, class: "btn btn-lg btn-danger new-btn" %>
      <% else %>
      <%= link_to "Add", show_add_path(@show), remote: true, class: "btn btn-lg btn-primary new-btn" %>
      <% end %>
    </div>
  </div>
  <div id="show-poster">
    <% if @show.poster.exists? %>
    <%= image_tag @show.poster.url(:medium) %>
    <% else %>
    <%= image_tag "https://s3-eu-west-1.amazonaws.com/tvshowsonrails/no-poster.png" %>
    <% end %>
  </div>
</div>
<div class="comment-list">
  <%= render 'comments/index' %>
</div>

<%= link_to "Back to Home", root_path, class: "btn btn-lg btn-primary" %>
