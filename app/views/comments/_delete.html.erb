<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Delete Comment</h3>
        </div>
        <div class="modal-body">
            <ul class="errors"></ul>
            Are you sure you wish to delete your comment ?<br>
            <div class="well"><%= @comment.comment %></div>
        </div>
        <div class="modal-footer">
            <%= link_to "Yes, delete this comment", show_comment_path({show_id: @show.id, id: @comment.id}), method: :delete, remote: true, class: "btn btn-danger" %>
            <%= link_to "No, please don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
        </div>
    </div>
</div>
