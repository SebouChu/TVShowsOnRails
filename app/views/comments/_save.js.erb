$("ul.errors").html("");
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".comment-list").html("<%= escape_javascript(render 'index') %>");
  $("#comment-modal").modal("hide");
<% end %>
